<% form_for(page, :html => { :class => 'cmxform', :multipart => true }) do |f| %>
  <%= f.error_messages %>
	<fieldset>
		<ol>
			<li><%= f.label :title %> <%= f.text_field :title %></li>
			<li><%= f.label :content %> <%= f.text_area :content %></li>
			<li><%= f.label :description %> <%= f.text_area :description %></li>
			<li><%= f.label :tags %> <%= f.text_field :tags %></li>
		</ol>
	</fieldset>
  <%= f.submit button_text %>
<% end %>

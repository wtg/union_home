<h1>Listing images</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Caption</th>
    <th>Imageable</th>
    <th>Imageable type</th>
    <th>File file name</th>
    <th>File content type</th>
    <th>File file size</th>
    <th>File updated at</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%=h image.title %></td>
    <td><%=h image.caption %></td>
    <td><%=h image.imageable_id %></td>
    <td><%=h image.imageable_type %></td>
    <td><%=h image.file_file_name %></td>
    <td><%=h image.file_content_type %></td>
    <td><%=h image.file_file_size %></td>
    <td><%=h image.file_updated_at %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


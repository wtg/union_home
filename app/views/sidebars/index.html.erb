<h1>Listing sidebars</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @sidebars.each do |sidebar| %>
  <tr>
    <td><%=h sidebar.title %></td>
    <td><%=h sidebar.content %></td>
    <td><%= link_to 'Show', sidebar %></td>
    <td><%= link_to 'Edit', edit_sidebar_path(sidebar) %></td>
    <td><%= link_to 'Destroy', sidebar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New sidebar', new_sidebar_path %>
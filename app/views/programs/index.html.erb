<h1>Listing programs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Expense in cents</th>
    <th>Income in cents</th>
    <th>Subsidy in cents</th>
    <th>Budget</th>
  </tr>

<% @programs.each do |program| %>
  <tr>
    <td><%=h program.name %></td>
    <td><%=h program.expense_in_cents %></td>
    <td><%=h program.income_in_cents %></td>
    <td><%=h program.subsidy_in_cents %></td>
    <td><%=h program.budget_id %></td>
    <td><%= link_to 'Show', program %></td>
    <td><%= link_to 'Edit', edit_program_path(program) %></td>
    <td><%= link_to 'Destroy', program, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New program', new_program_path %>
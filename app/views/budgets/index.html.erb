<h1>Listing budgets</h1>

<table>
  <tr>
    <th>Ext</th>
    <th>Year</th>
    <th>Club</th>
    <th>Expense in cents</th>
    <th>Income in cents</th>
    <th>Subsidy in cents</th>
  </tr>

<% @budgets.each do |budget| %>
  <tr>
    <td><%=h budget.ext_id %></td>
    <td><%=h budget.year %></td>
    <td><%=h budget.club_id %></td>
    <td><%=h budget.expense_in_cents %></td>
    <td><%=h budget.income_in_cents %></td>
    <td><%=h budget.subsidy_in_cents %></td>
    <td><%= link_to 'Show', budget %></td>
    <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
    <td><%= link_to 'Destroy', budget, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New budget', new_budget_path %>
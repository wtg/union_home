<h1>New category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :is_hidden %><br />
    <%= f.check_box :is_hidden %>
  </p>
  <p>
    <%= f.label :cardinality %><br />
    <%= f.text_field :cardinality %>
  </p>
  <p>
    <%= f.label :landing_id %><br />
    <%= f.text_field :landing_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>